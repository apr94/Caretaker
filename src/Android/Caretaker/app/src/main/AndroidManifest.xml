<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="final_project.cis542.upenn.edu.caretaker" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="final_project.cis542.upenn.edu.caretaker.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="final_project.cis542.upenn.edu.caretaker.LogActivity"
            android:label="@string/title_activity_log" >
        </activity>
        <activity
            android:name="final_project.cis542.upenn.edu.caretaker.BatteryActivity"
            android:label="@string/title_activity_battery" >
        </activity>
        <activity
            android:name="final_project.cis542.upenn.edu.caretaker.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
